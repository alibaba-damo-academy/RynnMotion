<mujoco model="dual_piper_scene">
  <compiler angle="radian" meshdir="../../../3.robot_arm/22.piper/assets" />
  <option timestep="0.001" integrator="implicitfast" cone="elliptic" noslip_iterations="2" impratio="10" gravity="0 0 -9.80665" />

  <include file="../../../3.robot_arm/22.piper/mjcf/piper_defaults.xml" />
  <include file="../../../3.robot_arm/22.piper/mjcf/piper_assets.xml" />

  <statistic center="0 0 0.85" extent="1.2" meansize="0.05" />

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
    <global azimuth="135" elevation="-20" />
    <quality shadowsize="8192" />
  </visual>

  <asset>
    <!-- Table meshes (relative to meshdir: ../../3.robot_arm/22.piper/assets) -->
    <mesh file="../../../environments/tablelegs.obj" />
    <mesh file="../../../environments/tabletop.obj" />

    <!-- Textures (relative to this XML file location) -->
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072" />
    <texture type="2d" name="groundplane" builtin="flat" mark="edge" rgb1="0.1 0.1 0.1" rgb2="0.3 0.5 0.3" markrgb="0.8 0.8 0.8" width="300" height="300" />
    <texture type="2d" file="../../../environments/small_meta_table_diffuse.png" />

    <!-- Materials -->
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2" />
    <material name="table" texture="small_meta_table_diffuse" />
  </asset>

  <worldbody>
    <!-- Lighting -->
    <light pos="0 0.1 2.5" />

    <!-- Floor -->
    <geom name="floor" size="10 10 0.05" type="plane" material="groundplane" />
    <site name="worldref" />

    <!-- Table -->
    <geom mesh="tabletop" material="table" class="visual" />
    <geom mesh="tablelegs" material="table" class="visual" />
    <geom name="table" pos="0 0 -0.1009" size="0.61 0.37 0.1" type="box" class="collision" />

    <!-- Cameras -->
    <camera name="overhead_cam" focal="1.93e-3 1.93e-3" resolution="1280 720" sensorsize="3896e-6 2140e-6" pos="-1.5 0 2" euler="0 -1 -1.57079" />

    <!-- Dual Piper robots positioned for dual-arm teleoperation -->
    <body name="tf1" pos="-0.25 0.3 0.75">
      <replicate count="2" offset="0 -0.6 0" sep="_">
        <include file="../../../3.robot_arm/22.piper/mjcf/piper_links.xml" />
      </replicate>
    </body>

  </worldbody>

  <equality>
    <joint joint1="joint8" joint2="joint7" polycoef="0 -1 0 0 0" />
  </equality>

  <actuator>
    <position name="joint1" joint="joint1" class="piper" kp="80" kv="5" />
    <position name="joint2" joint="joint2" class="piper" kp="80" kv="5" />
    <position name="joint3" joint="joint3" class="piper" kp="80" kv="5" />
    <position name="joint4" joint="joint4" class="piper" kp="40" kv="5" />
    <position name="joint5" joint="joint5" class="piper" kp="10" kv="1.5" />
    <position name="joint6" joint="joint6" class="piper" kp="10" kv="1.5" />
    <position name="gripper" joint="joint7" class="finger" kp="40" kv="5" />
  </actuator>

  <sensor>
    <framepos name="eePos" objtype="site" objname="EE" />
    <framequat name="eeQuat" objtype="site" objname="EE" />
    <framelinvel name="eeLinVel" objtype="site" objname="EE" />
    <frameangvel name="eeAngVel" objtype="site" objname="EE" />
    <gyro name="eeGyro" site="EE" />
    <accelerometer name="eeAcc" site="EE" />
    <force name="eeForce" site="EE" />
  </sensor>

</mujoco>