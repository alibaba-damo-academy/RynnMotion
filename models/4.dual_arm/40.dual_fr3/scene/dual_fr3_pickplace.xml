<mujoco model="dual_fr3 pickplace scene">
  <option timestep="0.001" gravity="0 0 -9.80665" integrator="implicitfast" cone="elliptic" noslip_iterations="2" />
  <compiler angle="radian" meshdir="../../../3.robot_arm/20.fr3/assets" />

  <include file="../../../3.robot_arm/20.fr3/mjcf/fr3_defaults.xml" />
  <include file="../../../3.robot_arm/20.fr3/mjcf/fr3_assets.xml" />
  <include file="../../../3.robot_arm/20.fr3/mjcf/fr3_contacts.xml" />

  <include file="../../../environments/mug_assets.xml" />

  <statistic center="0. 0 0.85" extent="1.2" meansize="0.05" />

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0" />
    <rgba haze="0.15 0.25 0.35 1" />
    <global azimuth="120" elevation="-20" />
    <quality shadowsize="8192" />
  </visual>

  <asset>
    <!-- Table meshes (relative to meshdir: ../../../3.robot_arm/20.fr3/assets) -->
    <mesh file="../../../environments/tablelegs.obj" />
    <mesh file="../../../environments/tabletop.obj" />
    <mesh name="highstage" file="../../../environments/highstage_camera.stl" />
    <mesh name="front_camera" file="../../../environments/Camera.stl" />

    <!-- Textures (relative to this XML file location) -->
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072" />
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300" />
    <texture type="2d" file="../../../environments/small_meta_table_diffuse.png" />
    <texture name="lerobot_tablecloth" type="2d" file="../../../environments/lerobot_tablecloth.png" />

    <!-- Materials -->
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2" />
    <material name="table" texture="small_meta_table_diffuse" />
    <material name="lerobot_tablecloth" texture="lerobot_tablecloth" texuniform="false" texrepeat="1 1" reflectance="0.2" />
  </asset>

  <worldbody>
    <!-- Lighting -->
    <light pos="0 0 2.25" dir="0 0 -1" directional="true" />

    <!-- Floor -->
    <geom name="floor" size="10 10 0.05" type="plane" material="groundplane" />
    <site name="worldref" />

    <!-- Table -->
    <geom mesh="tabletop" material="table" class="visual" pos="0 0 0" />
    <geom mesh="tablelegs" material="table" class="visual" pos="0 0 0" />
    <geom name="table" pos="0 0 0.65" size="0.61 0.37 0.1" type="box" class="collision" solref="0.001 1" solimp="0. 1 0.0001 0.02 3" />
    <geom name="lerobot_tablecloth" type="plane" material="lerobot_tablecloth" pos="0 0 0.751" size="0.420 0.297 0.0005" euler="0 0 -1.57079" />

    <!-- High Stage with Front Camera -->
    <body name="highstage" pos="0.35 0.0 0.75" euler="0 0 3.14159">
      <geom type="mesh" mesh="highstage" rgba="1 1 1 1" />
      <body name="tf_camera1" pos="0.017 0 0.552" euler="0 1.134 0">
        <geom type="mesh" mesh="front_camera" rgba="1 1 1 0.7" />
        <body name="tf_camera2" euler="1.57079 -1.57079 0">
          <camera name="front_camera" mode="fixed" resolution="1920 1080" sensorsize="5.76 3.24" focal="3.5 3.5" />
          <body name="tf_camera3" euler="3.1415926 0 0">
            <site name="camera_front" />
          </body>
        </body>
      </body>
    </body>

    <!-- External Cameras -->
    <camera name="overhead_cam" focal="1.93e-3 1.93e-3" resolution="1280 720" sensorsize="3896e-6 2140e-6" pos="-1.5 0 2" euler="0 -1 -1.57079" />
    <camera name="ext_camera" pos="1.5 0.0 2.0" euler="0.0 0.78 1.57" mode="fixed" resolution="1920 1080" sensorsize="5.37 4.04" focal="2.9 2.9" />

    <body name="tf1" pos="-0.25 0.4 0.75">
      <replicate count="2" offset="0 -0.8 0" sep="_">
        <include file="../../../3.robot_arm/20.fr3/mjcf/fr3_links.xml" />
      </replicate>
    </body>

    <!-- Pick and place objects -->
    <!-- Dual mugs: left (positive Y) and right (negative Y) -->
    <body name="mug" pos="0.25 0.4 0.75" euler="0 0 1.57079">
      <replicate count="2" offset="-0.8 0 0" euler="0 0 -3.1415926" sep="_">
        <include file="../../../environments/mug_body.xml" />
      </replicate>
    </body>
    <!-- Left arm cubes (positive Y) -->
    <body name="cube1" pos="0 0.2 0.86">
      <freejoint name="cube1" />
      <geom type="box" mass="0.01" size="0.01 0.01 0.01" material="red" solref="0.001 1" solimp="0. 1 0.0001 0.02 3" />
    </body>
    <body name="cube2" pos="0.15 0.2 0.86">
      <freejoint name="cube2" />
      <geom type="box" mass="0.01" size="0.01 0.01 0.01" material="orange" solref="0.001 1" solimp="0. 1 0.0001 0.02 3" />
    </body>
    <body name="cube3" pos="0.075 0.35 0.86">
      <freejoint name="cube3" />
      <geom type="box" mass="0.01" size="0.01 0.01 0.01" material="yellow" solref="0.001 1" solimp="0. 1 0.0001 0.02 3" />
    </body>
    <!-- Right arm cubes (negative Y) -->
    <body name="cube4" pos="0 -0.2 0.86">
      <freejoint name="cube4" />
      <geom type="box" mass="0.01" size="0.01 0.01 0.01" material="green" solref="0.001 1" solimp="0. 1 0.0001 0.02 3" />
    </body>
    <body name="cube5" pos="0.15 -0.2 0.86">
      <freejoint name="cube5" />
      <geom type="box" mass="0.01" size="0.01 0.01 0.01" material="blue" solref="0.001 1" solimp="0. 1 0.0001 0.02 3" />
    </body>
    <body name="cube6" pos="0.075 -0.35 0.86">
      <freejoint name="cube6" />
      <geom type="box" mass="0.01" size="0.01 0.01 0.01" material="cyan" solref="0.001 1" solimp="0. 1 0.0001 0.02 3" />
    </body>

  </worldbody>

  <include file="../../../3.robot_arm/20.fr3/mjcf/fr3_actuators.xml" />
  <include file="../../../3.robot_arm/20.fr3/mjcf/fr3_sensors.xml" />

</mujoco>
