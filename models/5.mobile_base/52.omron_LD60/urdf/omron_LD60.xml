<mujoco model="LD60">
    <compiler angle="radian" meshdir="../assets" autolimits="true"/>

    <option timestep="0.001" integrator="implicitfast"/>

    <default>
        <default class="LD60">
            <default class="visual">
                <geom type="mesh" contype="0" conaffinity="0" group="2"/>
            </default>
            <default class="collision">
                <geom type="mesh" group="3"/>
            </default>
        </default>
    </default>

    <asset>
        <material class="LD60" name="white" rgba="1 1 1 1"/>
        <mesh file="omron.stl"/>
    </asset>

    <worldbody> 
        <light name="top" pos="0 0 2" mode="trackcom"/>

        <body name="LD60" pos="0 0 0.0">
            <inertial pos="0 0 0" mass="5" diaginertia="1 1 1"/>
            <freejoint name="free_joint"/>
            <site name="local_forward" pos="0 0 0"/>
            <geom mesh="omron" material="white" class="visual"/>
            <geom type="box" pos="0 0 0.20" size="0.34 0.24 0.18" rgba="1 1 1 0.5" class="collision" />

            <body name="left_wheel" pos="0.0 0.2 0.05" quat="1 -1 0 0">
                <joint name="left_wheel_joint" type="hinge" pos="0 0 0" axis="0 0 1" />
                <geom type="cylinder" size="0.05 0.01" rgba="1 1 1 1" class="collision" />
            </body>

            <body name="right_wheel" pos="0.0 -0.2 0.05" quat="1 -1 0 0">
                <joint name="right_wheel_joint" type="hinge" pos="0 0 0" axis="0 0 1" />
                <geom type="cylinder" size="0.05 0.01" rgba="1 1 1 1" class="collision" />
            </body>

            <body name="front_wheel" pos="0.3 0.0 0.05" quat="1 -1 0 0">
                <joint name="front_wheel_joint" type="ball" pos="0 0 0" />
                <geom type="sphere" size="0.05" rgba="1 1 1 1" class="collision" />
            </body>

            <body name="back_wheel" pos="-0.3 0.0 0.05" quat="1 -1 0 0">
                <joint name="back_wheel_joint" type="ball" pos="0 0 0" />
                <geom type="sphere" size="0.05" rgba="1 1 1 1" class="collision" />
            </body>
        </body>

    </worldbody>

    <actuator>
        <velocity name="left_wheel_actuator" joint="left_wheel_joint" kv="1" ctrlrange="-1.8 1.8" />
        <velocity name="right_wheel_actuator_" joint="right_wheel_joint" kv="1" ctrlrange="-1.8 1.8" />
    </actuator>

</mujoco>
