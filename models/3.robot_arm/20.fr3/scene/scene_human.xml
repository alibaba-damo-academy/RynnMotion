<mujoco model="fr3 scene">
  <option timestep="0.001" gravity="0 0 -9.80665" integrator="implicitfast"/>
  <compiler angle="radian" meshdir="../assets"/>

  <include file="../mjcf/fr3_defaults.xml"/>
  <include file="../mjcf/fr3_assets.xml"/>
  <contact>
    <exclude body1="fr3_link5" body2="fr3_link7"/>
    <exclude body1="fr3_link6" body2="fr3_link7"/>
    <exclude body1="fr3_link5" body2="fr3_link6"/>
  </contact>

  <statistic center="0.2 0 0.4" extent=".8"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="flat" mark="edge" rgb1="0.1 0.1 0.1" rgb2="0.3 0.5 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="glass" rgba="0.8 0.8 1 1"/>
    <mesh name="human_body" file="../../../environments/human/body.stl" scale="1 1 1"/>
    <mesh name="human_arm" file="../../../environments/human/arm.stl" scale="1 1 1"/>
    <mesh name="human_head" file="../../../environments/human/head.stl" scale="1 1 1"/>
    <mesh name="human_neck" file="../../../environments/human/neck.stl" scale="1 1 1"/>
  </asset>

  <worldbody>
    <geom type="cylinder" size="0.002 0.05" rgba="1 0 0 1" pos="0.05 -0.0 0." euler="0 1.57079 0" class="visual"/>
    <geom type="cylinder" size="0.002 0.05" rgba="0 1 0 1" pos="0 0.05 0." euler="1.57079 0 0" class="visual"/>
    <geom type="cylinder" size="0.002 0.05" rgba="0 0 1 1" pos="0 -0.0 0.05" euler="0 0 0" class="visual"/>

    <include file="../mjcf/fr3_links_probe.xml"/>

    <light pos="0 0 10" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    <camera name="ext_camera" pos="1.5 0.0 2.0" euler="0.0 0.78 1.57" mode="fixed" resolution="1920 1080" sensorsize="5.37 4.04" focal="2.9 2.9"/>
    <body name="human_object" pos="0.5 0.1 0.14" euler="1.57 0 1.57">
      <joint type="slide" range="-0.001 0.001"/>
      <geom name="human_object1" type="mesh" mesh="human_body" rgba="0.8 0.7 0.5 1" friction="0.5 0.5 0.5" solimp="0.8 0.8 0.01" solref="0.001 0.1" contype="1" conaffinity="1"/>
      <geom name="human_object2" type="mesh" mesh="human_arm" rgba="0.8 0.7 0.5 1" friction="0.5 0.5 0.5" solimp="0.8 0.8 0.01" solref="0.001 1" contype="1" conaffinity="1"/>
      <geom name="human_object3" type="mesh" mesh="human_head" rgba="0.8 0.7 0.5 1" friction="0.5 0.5 0.5" solimp="0.8 0.8 0.01" solref="0.001 1" contype="1" conaffinity="1"/>
      <geom name="human_object4" type="mesh" mesh="human_neck" rgba="0.8 0.7 0.5 1" friction="0.5 0.5 0.5" solimp="0.8 0.8 0.01" solref="0.001 1" contype="1" conaffinity="1"/>
      <inertial mass="20.0" pos="0 0 0" diaginertia="0.1 0.1 0.1"/>
    </body>

  </worldbody>

  <actuator>
    <position class="fr3" name="lj1" joint="fr3_joint1" kp="4500" kv="450"/>
    <position class="fr3" name="lj2" joint="fr3_joint2" kp="4500" kv="450"/>
    <position class="fr3" name="lj3" joint="fr3_joint3" kp="3500" kv="350"/>
    <position class="fr3" name="lj4" joint="fr3_joint4" kp="3500" kv="350"/>
    <position class="fr3" name="lj5" joint="fr3_joint5" kp="2000" kv="200"/>
    <position class="fr3" name="lj6" joint="fr3_joint6" kp="2000" kv="200"/>
    <position class="fr3" name="lj7" joint="fr3_joint7" kp="2000" kv="200"/>
  </actuator>
  <include file="../mjcf/fr3_sensors.xml"/>


</mujoco>
