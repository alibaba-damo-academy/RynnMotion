<mujoco model="fr3 scene">
  <option timestep="0.001" gravity="0 0 -9.80665" integrator="implicitfast"/>
  <compiler angle="radian" meshdir="../assets"/>
  <statistic center="0.2 0 0.4" extent=".8"/>

  <include file="../mjcf/fr3_defaults.xml"/>
  <include file="../mjcf/fr3_assets.xml"/>

  <contact>
    <exclude body1="fr3_link5" body2="fr3_link7"/>
    <exclude body1="fr3_link6" body2="fr3_link7"/>
    <exclude body1="fr3_link5" body2="fr3_link6"/>
  </contact>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="flat" mark="edge" rgb1="0.1 0.1 0.1" rgb2="0.3 0.5 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="0 0 10" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    <camera name="ext_camera" pos="1.5 0.0 2.0" euler="0.0 0.78 1.57" mode="fixed" resolution="1920 1080" sensorsize="5.37 4.04" focal="2.9 2.9"/>
    <flexcomp name="softbox" pos="0.55 0 0.1" type="grid" count="10 10 6" spacing=".05 .05 .05" radius=".005" rgba="0 .7 .7 1" dim="3" mass="5">
      <contact condim="3" solref="0.01 1" solimp=".95 .99 .0001" selfcollide="none"/>
      <edge damping="1"/>
      <elasticity young="1e4" poisson="0.4"/>
    </flexcomp>
    <include file="../mjcf/fr3_links_probe.xml"/>
  </worldbody>

  <actuator>
    <position class="fr3" name="lj1" joint="fr3_joint1" kp="4500" kv="450"/>
    <position class="fr3" name="lj2" joint="fr3_joint2" kp="4500" kv="450"/>
    <position class="fr3" name="lj3" joint="fr3_joint3" kp="3500" kv="350"/>
    <position class="fr3" name="lj4" joint="fr3_joint4" kp="3500" kv="350"/>
    <position class="fr3" name="lj5" joint="fr3_joint5" kp="2000" kv="200"/>
    <position class="fr3" name="lj6" joint="fr3_joint6" kp="2000" kv="200"/>
    <position class="fr3" name="lj7" joint="fr3_joint7" kp="2000" kv="200"/>
  </actuator>
  <include file="../mjcf/fr3_sensors.xml"/>


</mujoco>
