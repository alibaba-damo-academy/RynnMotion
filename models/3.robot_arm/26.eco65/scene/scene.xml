<mujoco model="eco65 scene">
  <include file="../urdf/eco65.xml"/>

  <option timestep="0.001" gravity="0 0 -9.80665"/>
  <option solver="Newton" iterations="100" />
  <option tolerance="1e-10" />
  <compiler angle="radian"/>

  <statistic center="0.2 0 0.4" extent=".8"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="flat" mark="edge" rgb1="0.3 0.3 0.3" rgb2="0.3 0.5 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.5"/>
    <material name="wood_mat" rgba="0.6 0.3 0.1 1" specular="0.1" shininess="0.5" reflectance="0.1"/>
    <material name="cube_mat" rgba="1 0 0 1"/>      
    <material name="sphere_mat" rgba="0 0 1 1"/>    
    <material name="cone_mat" rgba="1 1 0 1"/>      
    <material name="cylinder_mat" rgba="0 1 0 1"/>  
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>

    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    <camera name="ext_camera" pos="0.5 -1.0 2.0" euler="0.78 0 0" mode="fixed" resolution="1920 1080" sensorsize="5.37 4.04" focal="2.9 2.9"/> 

    <body name="table" pos="0.5 0 0.35">
      <geom name="table_geom" type="box" size="0.5 0.5 0.05" material="wood_mat"/>
    </body>

    <body name="cube" pos="0.2 0.25 0.425">
      <geom type="box" size="0.025 0.025 0.025" material="cube_mat" density="500"/>
    </body>

    <body name="sphere" pos="0.1 -0.2 0.4">
      <geom type="sphere" size="0.05" material="sphere_mat" density="200"/>
    </body>

    <body name="c1" pos="0.5 0.2 0.45">
      <geom type="cylinder" size="0.05 0.1" material="cone_mat" density="300"/>
    </body>

    <body name="c2" pos="0.3 -0.3 0.45">
      <geom type="cylinder" size="0.05 0.05" material="cylinder_mat" density="400"/>
    </body>
  </worldbody>
</mujoco>
