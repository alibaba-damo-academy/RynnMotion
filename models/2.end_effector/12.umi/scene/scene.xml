<mujoco model="scene">
  <compiler angle="radian" meshdir="../assets" texturedir="../assets" />

  <option integrator="implicitfast" impratio="10" cone="elliptic" noslip_iterations="2">
    <flag multiccd="enable" />
  </option>

  <statistic center="0.2 0 0.2" extent="1.0" />

  <visual>
    <headlight diffuse="0.3 0.3 0.3" ambient="0.2 0.2 0.2" specular="0 0 0" />
    <rgba haze="0.15 0.25 0.35 1" />
    <global azimuth="-120" elevation="-20" />
    <quality shadowsize="0" />
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072" />
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300" />
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.0" />
  </asset>

  <include file="../mjcf/umi_assets.xml" />

  <worldbody>
    <light pos="0 0 4.5" dir="0 0 -1" directional="true" />
    <light pos="0 -4.5 0.6" dir="0 1 0" directional="true" />
    <geom name="floor" size="1 1 0.05" type="plane" material="groundplane" />

    <geom type="cylinder" size="0.002 0.05" rgba="1 0 0 1" pos="0.05 -0.0 0." euler="0 1.57079 0" class="visual"/>
    <geom type="cylinder" size="0.002 0.05" rgba="0 1 0 1" pos="0 0.05 0." euler="1.57079 0 0" class="visual"/>
    <geom type="cylinder" size="0.002 0.05" rgba="0 0 1 1" pos="0 -0.0 0.05" euler="0 0 0" class="visual"/>

    <replicate count="1" offset="0.3 0 0" sep="_">
      <include file="../mjcf/umi_links.xml" />
    </replicate>

    <body name="cube" pos="0 0 0.5" euler="0 0 0">
      <freejoint/>
      <geom name="cube" type="box" size="0.01 0.01 0.01" rgba="0.9 0.9 0.1 0.9"/>
      <geom type="cylinder" size="0.002 0.03" rgba="1 0 0 1" pos="0.03 0 0.0" euler="0 1.57079 0" contype="0" conaffinity="0" mass="0"/>
      <geom type="cylinder" size="0.002 0.03" rgba="0 1 0 1" pos="0 0.03 0.0" euler="1.57079 0 0" contype="0" conaffinity="0" mass="0"/>
      <geom type="cylinder" size="0.002 0.03" rgba="0 0 1 1" pos="0 0 0.03" euler="0 0 0" contype="0" conaffinity="0" mass="0"/>
      <inertial mass="0.001" pos="0 0 0" diaginertia="0.001 0.001 0.001"/>
    </body>

  </worldbody>

  <include file="../mjcf/umi_actuators_sensors.xml" />

</mujoco>
